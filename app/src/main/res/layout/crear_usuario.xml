<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/behance"
android:baselineAligned="true"
tools:context=".CrearUsuario" >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/logo4" />


    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="¡Crea tu usuario FonoDx!"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:textColorHint="@color/colorAccent"
            android:background="@drawable/linea1" >

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/nombres"
                android:drawablePadding="10dp"
                android:hint="Nombre     "
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@android:color/background_light"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="35dp"
            android:textColorHint="@color/colorAccent"
            android:background="@drawable/linea1" >

            <EditText
                android:id="@+id/apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:hint="Apellido     "
                android:drawableStart="@drawable/nombres"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@android:color/background_light"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:textColorHint="@color/colorAccent"
            android:background="@drawable/linea1" >

            <EditText
                android:id="@+id/celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="phone"
                android:drawableStart="@drawable/phone_logo"
                android:drawablePadding="10dp"
                android:hint="Celular     "
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@android:color/background_light"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/colorAccent"
            android:background="@drawable/linea1" >

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/email_logo"
                android:drawablePadding="10dp"
                android:hint="Email     "
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@android:color/background_light"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="12dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:textColorHint="@color/colorAccent"
            app:passwordToggleTint="@color/colorAccent"
            android:background="@drawable/linea1" >

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textPassword"
                android:drawableStart="@drawable/key"
                android:drawablePadding="10dp"
                android:hint="      Escoge clave"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@android:color/background_light"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@android:color/background_light"
                android:textSize="15sp" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"    >


          <!--  <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/linea1"
                android:textAlignment="center"
                android:theme="@style/Spinner"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:backgroundTint="#FFFFFF"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent" />-->

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_gravity="center"
        android:background="@drawable/behance_boton"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:textSize="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="Roll"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="16dp" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:textSize="15sp">

            <RadioButton
                android:id="@+id/estudiante"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Investigador"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/fisio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Personal de salud"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/enfermera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="25dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Paciente"
                android:textColor="@color/colorAccent" />





        </RadioGroup>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_gravity="center"
            android:background="@drawable/behance_boton"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:textSize="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="País de conexión"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:textSize="15sp">

            <RadioButton
                android:id="@+id/colombia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Colombia"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/ecuador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="25dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Ecuador"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/peru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Perú"
                android:textColor="@color/colorAccent" />


            <RadioButton
                android:id="@+id/mexico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="México"
                android:textColor="@color/colorAccent" />
            <RadioButton
                android:id="@+id/eeuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="EE.UU"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/argentina"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Argentina"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/chile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Chile"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/radioOtros"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:buttonTint="@color/colorAccent"
                android:fontFamily="@font/poppins"
                android:text="Otro"
                android:textColor="@color/colorAccent" />

        </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textimputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="35dp"
                android:textColorHint="@color/colorAccent"
                android:background="@drawable/linea1" >

                <EditText
                    android:id="@+id/otro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:inputType="textCapWords"
                    android:hint="País de conexión"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColorHint="@color/colorAccent"
                    android:textColorLink="@android:color/background_light"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*El manejo de datos esta basado en la ley de proteccion de datos colombiana y alineado al Privacy Policy de Google"
        android:textAlignment="textEnd"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/behance_boton1"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:text="    registrar   " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@android:color/background_light">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@color/colorAccent"
            android:textColorLink="@android:color/background_light">

        </LinearLayout>

        <Button
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/behance_boton1"
            android:drawableEnd="@drawable/whatsapp2"
            android:paddingEnd="15dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="10dp"
            android:drawableTint="#24A507"
            android:text="   Asistencia técnica   "
            android:textColor="@color/tab_indicator_gray" />

    </LinearLayout>

  </LinearLayout>

</ScrollView>
